<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsScrollable"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">



        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/paste" />

        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/undo"
            android:layout_alignTop="@+id/graph"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/graph"
            android:layout_marginLeft="550dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redo"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toRightOf="@+id/undo"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/graph" />



        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Add"
            app:layout_constraintTop_toBottomOf="@+id/Points"
            app:layout_constraintRight_toLeftOf="@+id/remove" />

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Points" />

        <TextView
            android:id="@+id/Edit"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:text="Edit"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/graph"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/Points"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginTop="14dp"
            android:text="Points"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/graph"
            android:layout_marginRight="40dp"
            android:layout_marginEnd = "40dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/graph"/>

        <Button
            android:id="@+id/paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-536dp"
            android:layout_marginLeft="0dp"
            android:text="Paste"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/copy" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
